rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to tasks collection
    match /tasks/{taskId} {
      allow read, write: if true;
    }
    
    // Allow read/write access to kanban-tasks collection
    match /kanban-tasks/{taskId} {
      allow read, write: if true;
    }
  }
}